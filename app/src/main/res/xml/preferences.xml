<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

  <EditTextPreference
    app:key="owo_api_key"
    app:title="OwO Token"
    />

  <SwitchPreference
    app:key="associated_upload"
    app:title="Associated uploads"
    app:defaultValue="false"
    />

  <EditTextPreference
    app:key="upload_url"
    app:title="Upload domain"
    app:defaultValue="https://owo.whats-th.is/"
    />

  <EditTextPreference
    app:key="shorten_url"
    app:title="Shorten domain"
    app:defaultValue="https://awau.moe/"
    />

  <SwitchPreference
    app:key="sentry_enabled"
    app:title="Share diagnostic information"
    />

</androidx.preference.PreferenceScreen>