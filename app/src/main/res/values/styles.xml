<resources>

  <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">72sp</item>
    <item name="android:textColor">#fff</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/roboto_black</item>
  </style>

  <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
    <item name="android:textColor">#fff</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/roboto_black</item>
  </style>

  <style name="menu_labels_style">
    <item name="android:background">@drawable/fab_label_background</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="TabTheme" parent="TextAppearance.AppCompat.Medium">
    <item name="android:textColor">#fff</item>
    <item name="android:fontFamily">@font/roboto_regular</item>
  </style>

  <style name="OwOBrandTextView" parent="android:Widget.TextView">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">bold</item>
    <item name="android:text">@string/logo_name</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textSize">96sp</item>
    <item name="android:textColor">@color/white</item>
  </style>
</resources>